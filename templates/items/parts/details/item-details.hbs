<h3 class="form-header">Type d'objet</h3>
<div class="form-group">
    <label>Sous-cat√©gorie</label>
    <div class="form-fields">
        <select name="data.subtype" data-type="String" style="width:100%">
            {{#select data.subtype}}
                <option value="">{{localize "ARIA.None"}}</option>
                <option value="armor">{{localize "ARIA.category.armor"}}</option>
                <option value="melee">{{localize "ARIA.category.melee"}}</option>
                <option value="ranged">{{localize "ARIA.category.ranged"}}</option>
                <option value="shield">{{localize "ARIA.category.shield"}}</option>
                <option value="jewel">{{localize "ARIA.category.jewel"}}</option>
                <option value="ammunition">{{localize "ARIA.category.ammunition"}}</option>
                <option value="mount">{{localize "ARIA.category.mount"}}</option>
                <option value="cloath">{{localize "ARIA.category.cloath"}}</option>
                <option value="trapping">{{localize "ARIA.category.other"}}</option>
            {{/select}}
        </select>
    </div>
</div>

{{> "systems/aria/templates/items/parts/details/equipment-details.hbs"}}

{{#if (or (or (equals data.subtype "melee") (equals data.subtype "ranged")) data.properties.weapon) }}
    {{> "systems/aria/templates/items/parts/details/weapon-details.hbs"}}
{{/if}}
{{#if (or (equals data.subtype "ranged") data.properties.ranged) }}
    {{> "systems/aria/templates/items/parts/details/ranged-details.hbs"}}
{{/if}}
{{#if (or (or (equals data.subtype "armor") (equals data.subtype "shield")) data.properties.protection) }}
    {{> "systems/aria/templates/items/parts/details/protection-details.hbs"}}
{{/if}}


