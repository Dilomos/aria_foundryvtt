<div class="flexrow no-wrap currencies" style="max-height:20px">
     <div class="flex4 center"> </div>
     <div class="flex4 center"> </div>
     <div class="flex1 center">Francs</div>
    <div class="flex2 center coin">
         <input class="field-value coin-field" name="data.currency.fp.qty" type="number" value="{{actor.data.currency.fp.qty}}" placeholder="0" data-dtype="Number"/>
        <i title="Credits" class="fas fa-coins" style="color:dimgray"></i>
    </div>
</div>

    <ol class="inventory-list">
        <li class="inventory-header flexrow">
            <h3 class="item-name flexrow"></h3>
            <div class="item-detail">Qt√©</div>
            <div class="item-detail">Equiper</div>
            <div class="item-controls">
                <a class="item-control item-create new-item" title="Ajouter un objet"><i class="fas fa-plus"></i></a>    
                <a class="item-control item-create compendium-pack" data-pack="aria.arme" data-open="0" title="Ajouter un objet"><i class="fas fa-folder-plus"></i></a>
            </div>
        </li>
        {{#if (notEmpty (getInventory actor.items))}}

        {{#if (notEmpty (getMelee actor.items))}}
            <li class="inventory-header flexrow"><h3 class="item-name center flexrow">{{localize "ARIA.category.melee"}}</h3></li>
            {{#each (getMelee actor.items) as |item id|}}
                {{> "systems/aria/templates/actors/character/parts/inventory/character-inventory-item.hbs" item}}
            {{/each}}
        {{/if}}

        {{#if (notEmpty (getRanged actor.items))}}
