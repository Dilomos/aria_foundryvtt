<div class="flexrow top">

    <div class="flex1" style="margin-right: 5px;">

         <div class="flex1 center">
                <span class="charlemagne titre-general field-label">{{ localize 'ARIA.ui.adventurer' }}</span>
         </div>
        <!-- NAME -->
        <div class="flexrow">
            <div class="flex4 center cell">
                <input class="field-value charname" name="name" type="text" value="{{actor.name}}" placeholder="Name" data-dtype="String"/>
            </div>
        </div>
        <!-- /NAME -->
    </div>

    <div class="flex1">
         <div class="flex1 center">
                <span class="charlemagne titre-general field-label">{{ localize 'ARIA.ui.liveordie' }}</span>
         </div>
         <!-- PROFILE -->
        <div class="flexrow">
                <div class="flex4 center cell drop-field compendium-pack" data-pack="aria.profiles" data-open="0">
                {{#if (getProfile actor.items)}}
                    {{#with (getProfile actor.items)}}
                        <input class="field-value charname" name="profile_name" type="text" value="{{name}}" placeholder="Profile Name" data-dtype="String" readonly="true"/>
                        <div class="profile-controls item" data-item-id="{{_id}}" style="padding-right:5px;">
                            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-times"></i></a>
                        </div>
                    {{/with}}
                {{else}}
                    <div class="empty">Ajoutez une Profession</div>
                {{/if}}
            </div>
        </div>
        <!-- /PROFILE -->
    </div>

</div>
