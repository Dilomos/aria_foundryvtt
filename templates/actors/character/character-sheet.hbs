<form class="{{cssClass}}" autocomplete="off">
    <div class="wrap">

        <div class="header">
            <div class="flexrow no-wrap">
                <div class="flex1 left" id="banner-left"></div>
                 <div class="flex1 center" id="logo-banner"><img src="/systems/aria/ui/couronne.png"/></div>
                <div class="flex1 right" id="banner-right"></div>
            </div>
        </div>
        
{{> "systems/aria/templates/actors/character/parts/character-header.hbs"}}

        <div class="flexrow main">
            <div class="content flex3">
                {{!-- Sheet Tab Navigation --}}
                <nav class="sheet-tabs tabs" data-group="primary">
                    <a class="item charlemagne" data-tab="stats">{{ localize "ARIA.tabs.stats" }}</a>
                    <a class="item compendium-pack charlemagne" data-pack="aria.paths" data-open="0" data-tab="capacities">{{ localize "ARIA.tabs.capacities" }}</a>
                    <a class="item compendium-pack charlemagne" data-pack="aria.items" data-open="0" data-tab="inventory">{{ localize "ARIA.tabs.inventory" }}</a>
                </nav>
                {{!-- Sheet Body --}}
                <section class="sheet-body">
                    {{!-- Stats Tab --}}
                    <div class="tab stats" data-group="primary" data-tab="stats">
                        {{> "systems/aria/templates/actors/character/parts/stats/character-stats.hbs"}}
                    </div>
                    {{!-- Capacitites Tab --}}
                    <div class="tab capacities" data-group="primary" data-tab="capacities">
                        {{> "systems/aria/templates/actors/character/parts/capacities/character-capacities.hbs"}}
                    </div>
                    {{!-- Inventory Tab --}}
                    <div class="tab inventory" data-group="primary" data-tab="inventory">
                        {{> "systems/aria/templates/actors/character/parts/inventory/character-inventory.hbs"}}
                    </div>
                </section>
            </div>
        </div>

        <div class="header">
            <div class="flexrow no-wrap">
                <div class="flex1 left" id="banner-bot-left"></div>
                 <div class="flex1 center" id="logo-orbe"><img src="/systems/aria/ui/orbe.png"/></div>
                <div class="flex1 right" id="banner-bot-right"></div>
            </div>
        </div>
    </div>
</form>

