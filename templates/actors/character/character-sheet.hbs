<form class="{{cssClass}}" autocomplete="off">
    <div class="wrap">
        <div class="header">
            <div class="flexrow no-wrap">
                <div class="flex1 left">
                    <div id="banner-left"></div>
                </div>
                <div class="flex1 right">
                    <div id="banner-right"></div>
                </div>
            </div>
            <div class="flexrow">
                <div class="flex1 center" id="logo-banner"><img src="/systems/aria/ui/couronne.png"/></div>
            </div>
        </div>
        <div class="flexrow main">
            <div class="sidebar flex1">
                <br/>
                <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
            </div>
            <div class="content flex3">
                {{> "systems/aria/templates/actors/character/parts/character-header.hbs"}}
                <div class="flexrow"><div class="flex1 half-spacer"></div></div>
                {{!-- Sheet Tab Navigation --}}
                <nav class="sheet-tabs tabs" data-group="primary">
                    <a class="item charlemagne" data-tab="stats">{{ localize "ARIA.tabs.stats" }}</a>
                    <a class="item compendium-pack charlemagne" data-pack="aria.paths" data-open="0" data-tab="capacities">{{ localize "ARIA.tabs.capacities" }}</a>
                    <a class="item compendium-pack charlemagne" data-pack="aria.items" data-open="0" data-tab="inventory">{{ localize "ARIA.tabs.inventory" }}</a>
                    <a class="item charlemagne" data-tab="description">{{ localize "ARIA.tabs.description" }}</a>
                </nav>
                {{!-- Sheet Body --}}
                <section class="sheet-body">
                    {{!-- Stats Tab --}}
                    <div class="tab stats" data-group="primary" data-tab="stats">
                        {{> "systems/aria/templates/actors/character/parts/stats/character-stats.hbs"}}
                    </div>
                    {{!-- Capacitites Tab --}}
                    <div class="tab capacities" data-group="primary" data-tab="capacities">
                        {{> "systems/aria/templates/actors/character/parts/capacities/character-capacities.hbs"}}
                    </div>
                    {{!-- Inventory Tab --}}
                    <div class="tab inventory" data-group="primary" data-tab="inventory">
                        {{> "systems/aria/templates/actors/character/parts/inventory/character-inventory.hbs"}}
                    </div>
                    {{!-- Notes Tab --}}
                    <div class="tab description" data-group="primary" data-tab="description">
                        {{> "systems/aria/templates/actors/character/parts/character-description.hbs"}}
                    </div>
                </section>
            </div>
        </div>

        <div class="flexrow no-wrap">
            <div class="flex1 center">
                <span class="field-label">JE SUIS GENIAL.E<br> PARCE QUE ...</span>
            </div>
            <div class="flex1 center">
                <span class="field-label">MAIS LA SOCIETE A DES PROBLEMES <br> AVEC MOI PARCE QUE...</span>
            </div>
        </div>
        <div class="flexrow no-wrap">
            <div class="flex1 center">
                <input class="field-value" name="genial" type="text" value="Je suis un magicien prometteur ..." placeholder="Génial" data-dtype="String"/>
            </div>
            <div class="flex1 center">
                <input class="field-value" name="genial" type="text" value="Je n'ai pas étudié la magie selon les règles." placeholder="Génial" data-dtype="String"/>
            </div>
        </div>

        <div class="header">
            <div class="flexrow no-wrap">
                <div class="flex1 left">
                    <div id="banner-left"></div>
                </div>
                <div class="flex1 right">
                    <div id="banner-right"></div>
                </div>
            </div>
            <div class="flexrow">
                <div class="flex1 center" id="logo-banner"><img src="/systems/aria/ui/orbe.png"/></div>
            </div>
        </div>

    </div>
</form>

