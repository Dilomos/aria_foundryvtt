<ol class="item-list">
    <li class="item flexrow" data-item-id="{{_id}}" draggable="true">
        <div class="item-name flexrow">
            <div class="item-image flex1" style="background: center/contain no-repeat url('{{img}}')"></div>
            <h4>{{name}}</h4>
        </div>
           
        <div class="item-detail {{#if system.properties.stackable}}item-qty unlocked{{else}}locked{{/if}}">
            {{#if system.properties.stackable}}{{system.qty}}{{/if}}
        </div>
        <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
    </li>
</ol>
