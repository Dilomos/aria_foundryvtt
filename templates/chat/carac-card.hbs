<div class="chat-card  aria-roll-chat" data-actor-id="{{actor.id}}">

    <div class="roll-card regular-roll-card">
        <header class="card-header flexrow">
            <img src="{{actor.img}}" title="{{actor.name}}"/>
            <div class="flexcol">
                <div>
                    <h2 class="dice-title-card">Jet = 
                    {{#if isSuccess}}
                        {{#if isCritical}} 
                            {{#if isPerfect}} 
                                <span class="success critical">{{result}} : Réussite totale !!!</span>
                            {{else}}
                                 <span class="success critical">{{result}} : Réussite critique !</span>
                            {{/if}}
                        {{else}}
                            <span class="success">{{result}} : Réussite.</span>
                        {{/if}}
                    {{else}}
                        {{#if isFumble}}
                            {{#if isTotalFumble}}
                                <span class="failure fumble">{{result}} : Echec total !!!</span>
                            {{else}}
                                <span class="failure fumble">{{result}} : Echec critique !</span>
                            {{/if}}
                        {{else}}
                            <span class="failure">{{result}} : Echec.</span>
                        {{/if}}
                    {{/if}}   
                    </h2>
                </div>
                <div>
                <p>
                    <strong>{{label}}</strong><br>
                    Difficulté : {{calcLabel}} = <strong>{{cmpValue}}%</strong>
                </p>
                </div>
            </div>
        </header>
    </div>


     <div class="blind-roll-card flexcol roll-card">

        <header class="card-header flexrow">
            <img src="icons/svg/mystery-man.svg" title="Inconnu"/>

            <div class="flexcol">
                <div class="flexrow">
                    <h2>Jet = <i><b>?</b></i></h2>
                </div>
                <div class="flexrow">
                    <div class="flexcol">
                    <strong class="item-name">Caché</strong>
                    <br>
                    {{formula}}
                    </div>
                </div>
            </div>
        </header>
    </div>


</div>
